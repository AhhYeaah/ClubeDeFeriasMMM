<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".app_pos_login.ui.FragmentsPosLogin.CarteirinhaFragment">

    <ImageView
        android:id="@+id/img_QRCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218"
        tools:src="@tools:sample/avatars" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Animscanner"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_estatico6"
        app:lottie_autoPlay="true"
        app:lottie_fileName="scanner.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tv_nome_carteirinha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Matheus"
        android:textColor="@color/TextColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/img_QRCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_estatico6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta é a sua carteira digital, ao chegar no clube posicione o QrCode perto do leitor da catraca assim como a animação abaixo"
        android:textAlignment="center"
        android:textColor="@color/TextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_QRCode"
        app:layout_constraintVertical_bias="0.07" />

</androidx.constraintlayout.widget.ConstraintLayout>